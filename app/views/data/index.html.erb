<p id="notice"><%= notice %></p>
<!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> -->
<%= form_tag({:action => :import}, multipart: true) do %>
  <%= file_field_tag :file %></br>
  <%= submit_tag "Import" %>
<% end %>
<%= form_tag({:action => :update_hotel_content}) do %>
  Slot: <%= select_tag "slot", options_for_select([ "a", "b", "c", "d", "e" ], "a") %>
  <%= submit_tag "Apply Filter" %>
<% end %>
<h1>Data</h1>

<table>
  <thead>
    <tr>
      <th>Keyword</th>
      <th>Url</th>
      <th>Slot</th>
      <th>Apply count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data.each do |datum| %>
      <tr>
        <td><%= datum.keyword %></td>
        <td><%= datum.url %></td>
        <td><%= datum.slot %></td>
        <td><%= datum.apply_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

